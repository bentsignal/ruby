{
  "extends": "@acme/tsconfig/base.json",
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "target": "ESNext",
    "lib": ["ES2021", "dom"],
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": true,
    "composite": true
  },
  "include": ["*.ts", "src"],
  "exclude": ["node_modules"]
}
